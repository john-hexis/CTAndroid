<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commonLabel">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="color">#3C3C3C</item>
    </style>

    <style name="commonTitle">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">800</item>
        <item name="color">#121212</item>
    </style>
    
    <style name="commonEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/common_edit_text_border_color</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="commonContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="color">@color/common_contained_button_text_color</item>
        <item name="backgroundTint">@color/common_contained_button_color</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">800</item>
    </style>
</resources>